{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Edition de l'Offre
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<div class="row">
			{% include "partial/_sidebar.html.twig" %}
			<div class="col-10">
				{% block content %}
					<h3 class='text-center mt-3'>Edition de l'Offre</h3>
					{{ form_start(form) }}
					<div class="row g-3 mt-5">
						<div class="col">
							{{form_row(form.title)}}</div>
						<div class="col">
							{{form_row(form.content)}}</div>
					</div>
					<div class="row g-3">
						<div class="col">
							{{form_row(form.location)}}</div>
						<div class="col">
							{{form_row(form.contractType)}}</div>
					</div>
					<div class="row g-3">
						<div class="col">
							{{form_row(form.shortDescription)}}</div>
						<div class="col">
							{{form_row(form.salary)}}</div>
					</div>
					<div class="row g-3">
						<div class="col">
							{{form_row(form.tags)}}</div>
						<div class="col"></div>
					</div>
					<button type="submit" class="btn btn-primary">Register</button>
					{{ form_end(form) }}
				{% endblock %}
			</div>
		</div>
	</div>
{% endblock %}
