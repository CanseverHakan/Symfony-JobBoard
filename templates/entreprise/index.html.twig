{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	- Création de profil d'entreprise
{% endblock %}

{% block body %}

	<div class="container-fluid">
		<div class="row">
			{% include "partial/_sidebar.html.twig" %}
			<div class="col-10">
				{% block content %}
					<h3 class='text-center mt-3'>Création de Profile</h3>
					{{ form_start(form) }}
					<div class="row g-3 mt-5">
						<div class="col">
							{{form_row(form.name)}}</div>
						<div class="col">
							{{form_row(form.address)}}</div>
					</div>
					<div class="row g-3">
						<div class="col">
							{{form_row(form.city)}}</div>
						<div class="col">
							{{form_row(form.zipCode)}}</div>
					</div>
					<div class="row g-3">
						<div class="col">
							{{form_row(form.country)}}</div>
						<div class="col">
							{{form_row(form.phoneNumber)}}</div>
					</div>
					<div class="row g-3">
						<div class="col">
							{{form_row(form.activityArea)}}</div>
						<div class="col">
							{{form_row(form.email)}}</div>
					</div>
					<div class="row g-3">
						<div class="col">
							{{form_row(form.website)}}</div>
						<div class="col">
							{{form_row(form.logo)}}
						</div>
						{{form_row(form.description)}}</div>
					<button type="submit" class="btn btn-primary">Register</button>
					{{ form_end(form) }}
				{% endblock %}
			</div>
		</div>
	</div>
{% endblock %}
